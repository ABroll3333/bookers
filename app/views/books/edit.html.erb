<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<% if @errors %>
  <div class="alert alert-danger">
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @errors.each do |messsage| %>
        <li><%= messsage %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<a class="show" href="<%= book_path(@book.id) %>">Show</a>
|
<a class="back" href="/books">Back</a>
